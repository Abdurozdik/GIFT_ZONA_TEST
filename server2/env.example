# GIFT ZONA Server Environment Variables
# Скопируйте в .env и заполните своими значениями

# === БАЗА ДАННЫХ ===
DATABASE_URL="postgresql://username:password@host:5432/database"

# === TELEGRAM API ===
API_ID="12345678"
API_HASH="your_api_hash_from_my_telegram_org"
BOT_TOKEN="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
PYROGRAM_SESSION_STRING="your_session_string_from_create_new_session_v2.py"

# === JWT И БЕЗОПАСНОСТЬ ===
JWT_SECRET="your-random-jwt-secret-key"
ADMIN_JWT_SECRET="your-random-admin-jwt-secret"
ADMIN_PASSWORD="your-admin-password"

# === CORS И ФРОНТЕНД ===
FRONTEND_URL="https://gift-zona.vercel.app"

# === НАСТРОЙКИ СЕРВЕРА ===
NODE_ENV="production"
PORT="4000"
LOG_LEVEL="INFO"

# === RATE LIMITING ===
WITHDRAWAL_RATE_LIMIT="10"
RATE_LIMIT_PERIOD="300"

# === ЦЕНЫ ПОДАРКОВ ===
PRICE_UPDATE_INTERVAL="30"
PORTAL_API_URL="https://api.portals.com"
PORTAL_API_KEY="your-portal-api-key"

# === REDIS (опционально) ===
REDIS_URL="redis://localhost:6379"

